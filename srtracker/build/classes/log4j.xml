	<appender name="ASYNC" class="org.apache.log4j.AsyncAppender">
		<param name="BufferSize" value="1024" />
		<appender-ref ref="FILE" />
		<!-- <appender-ref ref="AdministratorEmail" /> -->
	</appender>

	<appender name="Logica-UIAppender" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%t]%-5p %25c{1}(%4L) %m%n" />
		</layout>
	</appender>

	<logger name="org.springframework" additivity="true">
		<level value="ERROR" />
		<appender-ref ref="Logica-UIAppender" />
	</logger>

	<logger name="org.apache.commons.beanutils" additivity="true">
		<level value="INFO" />
		<appender-ref ref="Logica-UIAppender" />
	</logger>

	<logger name="com.opensymphony.oscache" additivity="true">
		<level value="ERROR" />
		<appender-ref ref="Logica-UIAppender" />
	</logger>

	<!-- ================ -->
	<!-- Limit categories -->
	<!-- ================ -->

	<logger name="com.logica">
		<level value="DEBUG" />
	</logger>


	<!-- ======================= -->
	<!-- Setup the Root category -->
	<!-- ======================= -->

	<root>
		<priority value="INFO" />
		<appender-ref ref="FILE" />
		<appender-ref ref="ASYNC" />
		<appender-ref ref="CONSOLE" />
	</root>

</log4j:configuration>
